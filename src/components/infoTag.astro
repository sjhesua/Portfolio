---
import "../styles/global.css";

interface Props {
    id: number;
    info: any;
}

const { id } = Astro.props;
const { info } = Astro.props;
---

<!-- Modal 1 -->
<input id={"tag" + id.toString()} type="checkbox" class="hidden" />
<div
    class="relative z-10 hidden"
    aria-labelledby="modal-title"
    role="dialog"
    aria-modal="true"
>
    <div class="fixed inset-0 bg-gray-950 bg-opacity-75"></div>
    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div
            class="flex min-h-full items-end justify-center p-4 text-center items-center sm:p-0"
        >
            <div
                class="relative transform overflow-hidden bg-white text-left shadow-xl sm:my-8 sm:w-full sm:max-w-lg"
            >
                <div class="bg-gray-50 dark:bg-gray-950 px-4 pb-4 pt-5 sm:p-6">
                    <div class="flex items-start">
                        <div
                            class="text-center sm:mt-0 sm:text-left text-gray-950 dark:text-gray-50"
                        >
                            <div class="flex items-center justify-between">
                                <h1
                                    class="text-base font-semibold text-gray-950 dark:text-gray-50"
                                    id="modal-title"
                                >
                                    {info}
                                </h1>
                                <label
                                    for={"tag" + id.toString()}
                                    class="w-6 h-6 inline-flex items-center justify-center bg-gray-400 cursor-pointer"
                                >
                                    X
                                </label>
                            </div>
                            <p class="my-2">
                                Más que escribir código, resuelvo problemas.
                            </p>
                            <h3 class="font-semibold my-2">Edad</h3>
                            <p class="my-2">31</p>
                            <h3 class="font-semibold">Título</h3>
                            <p class="my-2">
                                Técnico Superior en Tecnología de la Información
                            </p>
                            <h3 class="font-semibold">Estudios</h3>
                            <p class="my-2">IUTM Maracaibo, Venezuela</p>
                        </div>
                        <div class="relative inline-block ease-in-out check">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<li class="flex items-center">
    <div class="relative inline-block check">
        <label
            for={"tag" + id.toString()}
            data-modal-target="default-modal"
            data-modal-toggle="default-modal"
            class="w-6 h-6 mr-2 inline-flex items-center justify-center text-gray-950 cursor-pointer border bg-gray-50 border-gray-950"
        >
            ?
        </label>
    </div>
    <span class="text-gray-950 dark:text-gray-50">
        {info}
    </span>
</li>
