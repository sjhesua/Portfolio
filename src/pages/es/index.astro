//Components
import CardPro from "../../components/card.astro";
import InfoPro from "../../components/infoTag.astro";
import infoWork from "../../components/data/infoWork.json";
import Modal from "../../components/Modal.astro";
import DarkLightToggle from "../../components/darkLightToggle.astro";
//iconos
import {
	icons,frontendIcons,toolsIcons,LinkedIn
